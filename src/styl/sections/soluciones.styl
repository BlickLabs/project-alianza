.soluciones-wrapper
  height 1520px
  margin-top 88px
  position relative

.soluciones-panel-left
  background-color $white
  height 550px
  left 0
  position absolute
  top 0
  width 38%

.panel-left-img
  height auto
  width 242px

.soluciones-top-title-container
  background-color #f5f5f5
  padding 97px 0 400px 0
  width 100%

.soluciones-top-title
  color #353436
  font-size remify(38px)
  text-align center
  
/*Floating card*/

.soluciones-floating-card
  background-color $white
  box-shadow 0 2px 14px 0 rgba(0, 0, 0, 0.21)
  left 0
  margin 0 auto
  position absolute
  right 0
  top 220px
  width 800px

.floating-card-sections
  align-items center
  border-bottom solid 1px #e1e1e1
  display flex
  flex-direction row
  height 260px
  justify-content space-between
  position relative

.text-decorator-container
  display flex
  flex-direction row

.text-decorator
  height 27px
  margin 4px 25px 0 0
  width: 3px

.decoration
  &-green
    background-color #89cb44
  &-blue
    background-color #01568b
  &-yellow
    background-color #fecc00
  &-gray
    background-color #e9e9e9

.floating-card-icon-decoration
  right 0
  top 0

.floating-card-section-title
  line-height 34px
  text-align left

.floating-card-decoration
  border-top-left-radius 73px
  height 58px
  position relative
  width 374px

.floating-card-icon-container
  bottom 0
  height 168px
  left 65px
  margin auto 0
  position absolute
  top 0

.floating-card-icon
  height 168px
  width auto

.section-title-container
  margin-left 100px

.text-decorator-green:before
  content ""
  border-left solid 3px #89cb44
  margin-right 32px

.soluciones-view-more-button-modifier
  margin 20px 0 0 35px
