/*FORMULARIO ESTILOS EXPERIMENTALES*/

// VARIABLES // ============================== //
$bg-color = #424242
$hl-color = #288fc7
$muted-color = mix(white, $bg-color, 70%)
$trans-time = 300ms
$width = 277px

.group
  position relative
  margin 30px 0

// INPUTS // ============================== //

.contact-form-input-base
  background none
  color #4a4a4a
  font-size remify(16px)
  padding 10px 10px 10px 5px
  display block
  width $width
  border none
  border-radius 0
  border-bottom 1px solid #b3b3b3
  &:focus
    outline none

  &:focus ~ .contact-form-label,
  &:valid ~ .contact-form-label
    top -14px
    font-size 12px
    color $hl-color

  &:focus ~ .bar:before
    width $width

.contact-form-input-base[type="password"]
  letter-spacing 0.3em

.contact-form-label
  color #838383
  font-size remify(16px)
  position absolute
  pointer-events none
  left 5px
  top 10px
  transition $trans-time ease all

.bar
  position relative
  display block
  width $width
  &:before
    content ''
    height 2px
    width 0
    bottom 0px
    position absolute
    background $hl-color
    transition $trans-time ease all
    left 0%

.contact-form-select
  background url('../img/icons/select-down-arrow.png')
  background-position 110px 19px
  background-repeat no-repeat
  background-size 6px
  -webkit-appearance none
  -moz-appearance none

.contact-form-submit-container
  margin-top 50px

.contact-form-submit
  background-color #1a6aae
  border none
  border-radius 100px
  color #fff
  font-size remify(15px)
  height 36px
  letter-spacing 1px
  padding 0 32px

label.error
  font-family 'SourceSansPro'
  font-size remify(12px)
  font-style normal
  font-weight $regular
  position absolute

.contact-form-background-img-mobile
  display none

