.about-us-wrapper
  margin-top 88px

.about-us-top-title-container
  padding 50px 0 40px 0

/*About us first section*/

.about-us-first-section
  background url('../img/backgrounds/about-us-background.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  display flex
  flex-direction row
  height 470px

.about-us-img-one
  height 470px
  width auto

.about-us-first-section-content
  display flex
  flex-direction row

.about-us-first-section-text-container
  display flex
  flex-direction column
  justify-content center
  padding 0 93px

.about-us-first-section-paragraph-container
  margin-top 35px

.about-us-first-sectio-paragraph
  color #4a4a4a
  font-size remify(19px)
  line-height 34px

/*About us second section*/

.about-us-second-section
  position relative

.about-us-floating-card
  background-color #fff
  box-shadow 0 2px 15px 0 rgba(0, 0, 0, 0.21)
  display flex
  flex-direction row
  height 670px
  margin 0 10%
  position absolute
  top -150px

.about-us-img-one-two-container
  background url("../img/about-us/about-us-2.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  height 100%
  width 100%

.about-us-img-one-two
  height 450px
  width auto

.about-us-second-section-text-container
  display flex
  flex-direction column
  justify-content center
  padding 0 138px 0 85px

.business-swe-logo-container
  height 60px
  margin-bottom 16px
  width auto

.business-swe-logo
  height 60px
  width auto

.about-us-second-section-paragrap-container
  margin 20px 0 26px 0

.about-us-second-section-paragrap
  color #4a4a4a
  font-size remify(16px)
  line-height 28px

.about-us-company-button-container
  margin-top 26px

.about-us-second-section-bg-img
  background url('../img/backgrounds/about-us-bg-green.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  height 620px
  margin-top 210px

/*About us third section*/

.about-us-third-section
  margin 110px 20% 100px 20%

.about-us-third-section-content
  display flex
  flex-direction row
  padding-right 60px

.about-us-third-section-title-container
  margin-bottom 60px

.about-us-third-section-logo-container
  display flex
  justify-content center
  margin-right 90px
  min-width 120px

.abb-logo
  height 32px
  width 82px
  
.ericsson-logo
  height 23px
  width 117px

.axis-logo
  height 38px
  width 107px

.volvo-logo
  height 18px
  width 107px

.about-us-third-section-separator
  background-color #e9e9e9
  height 1px
  margin 38px 0
  width 100%

@media screen and (max-width 876px)
  .about-us-top-title-container
    padding-top 0

  .about-us-first-section
    flex-direction column
    height auto

  .about-us-first-section-text-container
    padding 40px 30px

  .about-us-first-sectio-paragraph
    font-size remify(18px)
    line-height 26px

  .about-us-img-one
    display none

  .about-us-floating-card
    flex-direction column
    height auto

  .about-us-img-one-two-container
    display none

  .about-us-img-one-two
    width 100%

  .floating-card-background-img
    background url("../img/about-us/about-us-2.jpg")
    background-position center
    background-repeat no-repeat
    background-size cover
    display block
    height 140px

  .about-us-second-section-text-container
    background-color #fff
    padding 30px

  .about-us-second-section-paragrap
    line-height 20px
    text-align left

  .about-us-second-section-bg-img
    height 458px

  .about-us-third-section
    margin 20px 30px 50px 30px

  .about-us-third-section-content
    align-items flex-start
    flex-direction column
    padding-right 0

  .about-us-third-section-logo-container
    justify-content flex-start
    margin 0 0 20px 0
